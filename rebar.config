{deps, [ {lager, "3.2.4"}
       , {brod, "2.3.6"}
       , {yamerl, "0.4.0"}
       , {graphiter, "1.0.5"}
       , {jsone, "1.4.3"}
       , {cowboy, "1.1.2"}
       ]}.

{profiles, [{test, [{deps, [meck]}]}]}.

{erl_opts, [ {parse_transform, lager_transform}
           , {d, 'APPLICATION', brucke}
           , error
           , warn_unused_vars
           , warn_shadow_vars
           , warn_unused_import
           , warn_obsolete_guard
           , debug_info
           ]}.

{ct_use_short_names, true}.
{cover_enabled, true}.
{eunit_opts, [verbose]}.

